function HandlerDiscon(BYVAL hConn AS INTEGER, BYVAL nRsn AS INTEGER) as integer
  dim lvl

  lvl = LlsOnDiscon(nRsn)
  if lvl >= 0 then
    DbgMsgVal( "\n --- Link Loss Service Alert ", lvl)
    DbgMsg("\n")
  endif

endfunc 1

//==============================================================================
// This handler is called when there is a EVCHARVAL message
//==============================================================================
function HandlerCharVal(BYVAL hChar AS INTEGER, byval offset, byval len) as integer
  if hChar == chIasAltlvl then
    DbgMsgVal( "\n --- Immediate Alert Service Alert ", IasGetAlrtVal())
    DbgMsg("\n")

  elseif hChar == chLlsAltlvl then
    DbgMsgVal( "\n --- Link Loss Service Alert ", LlsGetAlrtVal())
    DbgMsg("\n")

  else
    DbgMsgVal(" +++ HVC : ",hChar)
  endif
endfunc 1

//==============================================================================
// This handler is called when data has arrived at the serial port
